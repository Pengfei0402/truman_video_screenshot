.computer.only.tablet.only.row 
  .ui.borderless.fixed.menu
    .ui.container
      a.item
        img.ui.image(src=cdn+'/logo.svg', id='logo', width='150px')
      if user
        .right.menu
          .ui.simple.dropdown.item
            .image(style="min-width: 3em; max-width: 3em; min-height: 3em; max-height: 3em; margin: 0.2em 0.2em 0 0; display: flex; justify-content: center; align-items: center; overflow: hidden; border-radius: 50%;")
              img.ui.image.rounded(src=user.profile.picture style="width: 70%; height: 70%; object-fit: cover; border-radius: 50%;")
            span(style="margin-right: 5px;")= user.username
.mobile.only.row
  .ui.fluid.top.fixed.four.item.menu
    a.item
      img.ui.image(src=cdn+'/logo.svg', id='cell_logo', width='150px')
    if user
      a.item
        .right.menu
          .ui.simple.dropdown.item
            .image
              img.ui.image.rounded(src=user.profile.picture)
            span(style="margin-right: 5px;")= user.username